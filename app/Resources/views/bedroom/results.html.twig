{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1>Showing available rooms</h1>
        </div>
        <div class="row">

            <table width="100%" class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th>Hotel</th>
                    <th>Number</th>
                    <th>Status</th>
                    <th>Type</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for bedRoom in bedRooms %}
                    <tr>
                        <td>{{ bedRoom.hotel.name }}</td>
                        <td>{{ bedRoom.number }}</td>
                        <td>{{ bedRoom.status|readable_enum }}</td>
                        <td>{{ bedRoom.type.type|readable_enum }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('bedroom_show', { 'id': bedRoom.id }) }}">show</a>
                                </li>
                                <li>
                                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                    <a href="{{ path('bedroom_edit', { 'id': bedRoom.id }) }}">edit</a>
                                </li>
                                <li>
                                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                    <a href="{{ path('booking_new', { 'bedroom': bedRoom.id ,'start_date': "22/04/2017 00:00:00", 'end_date': "22/04/2017 01:00:00" }) }}">Reservar</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}
